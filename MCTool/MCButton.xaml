<UserControl x:Class="MCTool.MCButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCTool"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="30" Width="30" Height="30">
    <DockPanel x:Name="dockPanel">
        <Button x:Name="btn" Content="" Height="30" VerticalAlignment="Top" Width="30" Click="btn_Click">
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>
    </DockPanel>
</UserControl>
